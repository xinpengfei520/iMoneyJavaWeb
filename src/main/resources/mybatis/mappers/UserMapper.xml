<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xpf.imoney.mapper.UserMapper">
    <!-- 查询所有用户 -->
    <select id="selectAll" resultType="com.xpf.imoney.bean.User">
        select * from user
    </select>

    <!-- 根据id查询用户 -->
    <select id="selectById" resultType="com.xpf.imoney.bean.User">
        select * from user where id = #{id}
    </select>
</mapper>