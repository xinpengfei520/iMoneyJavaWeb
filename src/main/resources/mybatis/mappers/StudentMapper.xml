<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xpf.imoney.mapper.StudentMapper">
    <!-- 查询所有学生 -->
    <select id="selectAll" resultType="com.xpf.imoney.bean.Student">
        select * from student
    </select>

    <!-- 根据id查询学生 -->
    <select id="selectById" resultType="com.xpf.imoney.bean.Student">
        select * from student where id = #{id}
    </select>

</mapper>